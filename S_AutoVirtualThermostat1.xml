<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Failure</name>
            <dataType>ui4</dataType>
            <defaultValue>0</defaultValue>
            <shortCode>failure</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>CycleTime</name>
            <dataType>string</dataType>
            <defaultValue></defaultValue>
            <shortCode>cycletime</shortCode>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>SetpointCooling</name>
            <dataType>r4</dataType>
            <defaultValue>72</defaultValue>
            <shortCode>coolsp</shortCode>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>SetpointHeating</name>
            <dataType>r4</dataType>
            <defaultValue>72</defaultValue>
            <shortCode>heatsp</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>R4_ARG</name>
            <dataType>r4</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>ST_ARG</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>BOOL_ARG</name>
            <dataType>boolean</dataType>
        </stateVariable>
    </serviceStateTable>
    <actionList>
        <action>
            <name>SetCurrentSetpoint</name>
            <argumentList>
                <argument>
                    <name>Application</name>
                    <direction>in</direction>
                    <relatedStateVariable>ST_ARG</relatedStateVariable>
                </argument>
                <argument>
                    <name>NewCurrentSetpoint</name>
                    <direction>in</direction>
                    <relatedStateVariable>R4_ARG</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetCurrentSetpoint</name>
            <argumentList>
                <argument>
                    <name>Application</name>
                    <direction>in</direction>
                </argument>
                <argument>
                   <name>CurrentSetpoint</name>
                   <direction>out</direction>
                   <relatedStateVariable>CurrentSetpoint</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetCoolingSetpoint</name>
            <argumentList>
                <argument>
                    <name>NewCoolingSetpoint</name>
                    <direction>in</direction>
                    <relatedStateVariable>R4_ARG</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetHeatingSetpoint</name>
            <argumentList>
                <argument>
                    <name>NewHeatingSetpoint</name>
                    <direction>in</direction>
                    <relatedStateVariable>R4_ARG</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetDebug</name>
            <argumentList>
                <argument>
                    <name>debug</name>
                    <direction>in</direction>
                    <relatedStateVariable>BOOLEAN_ARG</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>getinfo</name>
            <argumentList>
                <argument>
                    <name>eventList</name>
                    <direction>out</direction>
                    <relatedStateVariable>int_el</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
</scpd>
